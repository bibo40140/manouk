{
  "name": "manouk-gestion",
  "version": "1.0.0",
  "description": "Gestion factures / achats / stock pour Manouk",
  "main": "main.js",
  "author": "Manouk",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "dist": "electron-builder"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "chart.js": "^4.5.1",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.manouk.gestion",
    "productName": "Manouk Gestion",
    "compression": "store",
    "win": {
      "target": "portable"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git",
      "!node_modules/electron-builder"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
